---
// src/pages/login.astro
// P√°gina p√∫blica. El backend ya NO requiere tenant_id.
// Si el usuario tiene m√∫ltiples hogares ‚Üí 409 con selector de nombre.
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Iniciar sesi√≥n">
  <style>
    :root {
      --accent:       #16a34a;
      --accent-dark:  #15803d;
      --accent-light: #dcfce7;
    }
    body {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--gray-50);
      padding: var(--space-4);
    }
    .auth-card {
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: var(--radius-lg);
      padding: var(--space-8);
      width: 100%;
      max-width: 400px;
      box-shadow: 0 1px 4px rgba(0,0,0,0.06);
    }
    .auth-logo { font-size: var(--font-2xl); font-weight: 700; margin-bottom: var(--space-1); }
    .auth-logo span { color: var(--accent); }
    .auth-subtitle { color: var(--text-muted); font-size: var(--font-sm); margin-bottom: var(--space-6); }
    .form-group { margin-bottom: var(--space-4); }
    .btn-full { width: 100%; justify-content: center; margin-top: var(--space-2); padding: var(--space-3) var(--space-6); font-size: var(--font-base); }
    .alert-box { border-radius: var(--radius-md); font-size: var(--font-sm); padding: var(--space-3) var(--space-4); margin-bottom: var(--space-4); display: none; }
    .alert-box.visible { display: block; }
    .alert-box.error { background: #fef2f2; border: 1px solid #fecaca; color: #dc2626; }
    .alert-box.info  { background: var(--accent-light); border: 1px solid #bbf7d0; color: var(--accent-dark); }
    #workspace-selector { display: none; margin-bottom: var(--space-4); }
    #workspace-selector.visible { display: block; }
    .ws-label { font-size: var(--font-sm); font-weight: 600; color: var(--gray-700); margin-bottom: var(--space-3); }
    .ws-option {
      display: flex; align-items: center; gap: var(--space-3);
      padding: var(--space-3) var(--space-4);
      border: 1px solid var(--border); border-radius: var(--radius-md);
      margin-bottom: var(--space-2); cursor: pointer;
      transition: border-color var(--transition), background-color var(--transition);
    }
    .ws-option:hover { border-color: var(--accent); background-color: var(--accent-light); }
    .ws-option label { cursor: pointer; font-size: var(--font-sm); font-weight: 500; margin: 0; }
    .auth-footer { text-align: center; margin-top: var(--space-6); font-size: var(--font-sm); color: var(--text-muted); }
  </style>

  <div class="auth-card">
    <p class="auth-logo">La <span>Despensa</span> ü•¶</p>
    <p class="auth-subtitle">Ingres√° con tu cuenta para continuar.</p>

    <div class="alert-box" id="alert-box" role="alert"></div>

    <form id="login-form" novalidate>
      <div class="form-group">
        <label for="email">Correo electr√≥nico</label>
        <input type="email" id="email" placeholder="tu@correo.com"
               autocomplete="email" inputmode="email" required />
      </div>

      <div class="form-group">
        <label for="password">Contrase√±a</label>
        <input type="password" id="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
               autocomplete="current-password" required />
      </div>

      <!-- Aparece solo si el email tiene m√∫ltiples hogares -->
      <div id="workspace-selector">
        <p class="ws-label">¬øA cu√°l hogar quer√©s ingresar?</p>
        <div id="ws-options"></div>
      </div>

      <button type="submit" class="btn-full" id="btn-submit">Ingresar</button>
    </form>

    <div class="auth-footer">
      ¬øNo ten√©s cuenta? <a href="/register">Crear cuenta</a>
    </div>
  </div>

  <script>
    const API = 'https://ladespensa-services.eliseo050595.workers.dev';

    // Redirigir si ya hay sesi√≥n
    if (localStorage.getItem('refreshToken')) {
      window.location.replace('/dashboard');
    }

    const alertBox   = document.getElementById('alert-box');
    const btnSubmit  = document.getElementById('btn-submit');
    const wsSel      = document.getElementById('workspace-selector');
    const wsOpts     = document.getElementById('ws-options');
    let pendingMulti = false;

    function showAlert(type, msg) {
      alertBox.className = `alert-box ${type} visible`;
      alertBox.textContent = msg;
    }

    function setLoading(on) {
      btnSubmit.disabled = on;
      btnSubmit.textContent = on ? 'Ingresando‚Ä¶' : 'Ingresar';
    }

    function buildWorkspaceSelector(workspaces) {
      pendingMulti = true;
      wsOpts.innerHTML = workspaces.map((name, i) => `
        <div class="ws-option" onclick="document.getElementById('ws${i}').checked=true">
          <input type="radio" id="ws${i}" name="workspace_name" value="${name}" ${i===0?'checked':''} />
          <label for="ws${i}">üè† ${name}</label>
        </div>
      `).join('');
      wsSel.classList.add('visible');
      showAlert('info', 'Tu cuenta pertenece a m√°s de un hogar. Seleccion√° uno para continuar.');
    }

    document.getElementById('login-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      alertBox.classList.remove('visible');

      const email    = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value;

      if (!email || !password) {
        showAlert('error', 'Complet√° tu email y contrase√±a.');
        return;
      }

      const body = { email, password };

      if (pendingMulti) {
        const checked = wsOpts.querySelector('input[name="workspace_name"]:checked');
        if (!checked) { showAlert('error', 'Seleccion√° un hogar.'); return; }
        body.workspace_name = checked.value;
      }

      setLoading(true);

      try {
        const res  = await fetch(`${API}/auth/login`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body),
        });
        const data = await res.json();

        // M√∫ltiples hogares
        if (res.status === 409 && data?.error?.code === 'CONFLICT') {
          const workspaces = data.error?.details?.workspaces;
          if (Array.isArray(workspaces)) { buildWorkspaceSelector(workspaces); }
          setLoading(false);
          return;
        }

        if (!res.ok) {
          showAlert('error', data?.error?.message || 'Email o contrase√±a incorrectos.');
          setLoading(false);
          return;
        }

        // √âxito ‚Äî guardar tokens
        localStorage.setItem('refreshToken', data.refreshToken);
        localStorage.setItem('user', JSON.stringify(data.user));
        const maxAge = 30 * 24 * 60 * 60;
        document.cookie = `refreshToken=${data.refreshToken}; Max-Age=${maxAge}; path=/; SameSite=Strict`;
        window.location.replace('/dashboard');

      } catch (err) {
        console.error('[login]', err);
        showAlert('error', 'No se pudo conectar con el servidor.');
        setLoading(false);
      }
    });
  </script>
</BaseLayout>
